%p= link_to "Home", root_path

= link_to (image_tag @post.image.url(:medium)), @post.link, target: "_blank"
%h1= link_to @post.title, @post.link, target: "_blank"
%p= @post.description
%p= @post.user.name

#comments
  %h2.comment_count= pluralize(@post.comments.count, "Comment")
  - @comment.each do |comment|
    .comment
      %p.username= comment.user.name
      %p.content= comment.content

  = render 'comments/form'

%p= link_to "Edit", edit_post_path(@post)
= link_to "Delete", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"}
